    </ContentPage.Resources>
    <ContentPage.Content>
     <Grid BackgroundColor="#F5F5F5">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <!-- Header -->
        <StackLayout Grid.Row="0" Padding="10" BackgroundColor="#2196F3">
            <Image Source="https://i.imgur.com/4wMn8pD.jpg"
                   HeightRequest="100"
                   WidthRequest="100"
                   Aspect="AspectFill"
                   VerticalOptions="Center"
                   HorizontalOptions="Center"
                   Margin="0, 10, 0, 0" />

            <Label Text="John Doe" 
                   FontSize="28"
                   TextColor="White"
                   HorizontalOptions="Center"
                   Margin="0, 10, 0, 0" />
        </StackLayout>

        <!-- Body -->
        <StackLayout Grid.Row="1" Padding="20">
            <StackLayout Orientation="Horizontal" Margin="0, 10, 0, 0">
                <Label Text="Email:" FontAttributes="Bold" WidthRequest="80"/>
                <Label Text="johndoe@email.com" />
            </StackLayout>

            <StackLayout Orientation="Horizontal" Margin="0, 10, 0, 0">
                <Label Text="Phone:" FontAttributes="Bold" WidthRequest="80"/>
                <Label Text="(123) 456-7890" />
            </StackLayout>

            <StackLayout Orientation="Horizontal" Margin="0, 10, 0, 0">
                <Label Text="Location:" FontAttributes="Bold" WidthRequest="80"/>
                <Label Text="New York City" />
            </StackLayout>

            <StackLayout Orientation="Horizontal" Margin="0, 10, 0, 0">
                <Label Text="Bio:" FontAttributes="Bold" WidthRequest="80"/>
                <Label Text="Lorem ipsum dolor sit amet, consectetur adipiscing elit. Aenean euismod id sapien vel pellentesque. Vestibulum euismod nulla nibh, at tincidunt augue suscipit eu. Sed id rhoncus lorem. Fusce euismod posuere elit, et rhoncus enim ultrices eu." />
            </StackLayout>
        </StackLayout>
    </Grid>
