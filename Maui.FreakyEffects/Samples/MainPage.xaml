<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:tt="clr-namespace:Maui.FreakyEffects.TouchTracking;assembly=Maui.FreakyEffects"
             xmlns:views="clr-namespace:SkiaSharp.Views.Maui.Controls;assembly=SkiaSharp.Views.Maui.Controls"
             x:Class="Samples.MainPage">
    <Grid>
        <views:SKCanvasView
        x:Name="canvasView"
        PaintSurface="OnPaint" 
        EnableTouchEvents="True">
        </views:SKCanvasView>
        <Grid.Effects>
            <tt:TouchEffect 
                x:Name="touchEffect"
                Capture="True"
                TouchAction="OnTouchEffectAction" />
        </Grid.Effects>
    </Grid>
</ContentPage>
